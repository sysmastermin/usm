{
  "buildCommand": "vite build && cp -r server/public/images dist/",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "memory": 1024,
      "regions": ["icn1"]
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/health",
      "destination": "/api"
    },
    {
      "source": "/((?!api/|images/).*)",
      "destination": "/index.html"
    }
  ]
}
